module stdsql at "trilogy:sql" use pgpool, sql
module stdio at "trilogy:io" use println

proc main!() {
    let query = $"SELECT * FROM basic"sql
    println!(query::to_string!())
    let conn = pgpool!("postgresql://cam:cam@localhost:5432/cam")
    let result = conn::query!(query)
    println!(result)

    let query = $"SELECT * FROM basic WHERE id = ${1}"sql
    println!(query::to_string!())
    let result = conn::query!(query)
    println!(result)
}
